@font-face {
  font-family: 'Archivo Narrow';
  src: url('fonts/ArchivoNarrow-Bold.ttf')  format('truetype'); /* Safari, Android, iOS */
  font-weight: bold;
}
@font-face {
  font-family: 'Archivo Narrow';
  src: url('fonts/ArchivoNarrow-Italic.ttf')  format('truetype'); /* Safari, Android, iOS */
  font-style: italic, oblique;
}
@font-face {
    font-family: 'Archivo Narrow';
    src: url('fonts/ArchivoNarrow-Regular.ttf')  format('truetype'); /* Safari, Android, iOS */
    font-weight: normal;
    font-style: normal;
}

body {
    font-family: "Arial";
    font-size: 18px;
    background: url("../img/bg.png");
}

h1, h2, h3 {
    font-family: "Archivo Narrow";
}
h1 {
    // position: absolute;
    // top: 0em;
    // left: 50%;
    // transform: translate(-50%,0);
    font-size: 3em;
    padding: 0.5em 0 0.5em 0;
    margin: 0;
}
h4 {
	font-weight: normal;
	font-family: "Archivo Narrow";
	font-style: normal;
	font-size: 2em;
	/* position: absolute; */
	/* top: 2em; */
    margin: 0;
	margin-bottom: 3em;
}
ul {
    font-size: 1.5em;
    text-align: left;
    width: 80%;
    margin: 0 auto;

    li {
        margin-bottom: 0.7em;
    }

    ul {
        font-size: 1em;
        margin: 1em 0 0 1em;
        color: #535353;
    }
}
img {
    max-width: 90%;
}

#hola {
    font-size: 1.3em;

    .fp-tableCell {
    	vertical-align: middle;
    }

    h1 {
        position: static;
        transform: none;
        font-size: 2em;
        padding: 0;
    }
    h3 {
        margin-bottom: 3em;
        font-style: italic;
        font-weight: normal;
    }
    img {
        width: 50%;
    }

    i {
        display: block;
        font-size: 0.8em;
        margin-top: 0.4em;
    }
}

.section {
    text-align: center;
}

.centered {
    margin-top: 10%;
}

.fp-tableCell {
	vertical-align: top;
}

#viz {
    background-color: white;

    h1 {
        padding-bottom: 0.3em;
    }

    .axis path,
    .axis line {
      fill: none;
      stroke: #000;
      shape-rendering: crispEdges;
    }

    .dot {
        /*opacity: 1;
        transition: opacity 0.4s;*/
    }
    .dot.filtered {
      opacity: 0;
    }

    .tooltip {
        pointer-events: none;
        white-space: nowrap;
        background-color: white;
        top: 19%;
        left: 0%;
        position: absolute;
    }

    .tooltip div {
        text-align: center;
        font-weight: bold;
        font-size: 0.6em;
    }

    #divMostrarEspectrograma {
        background-color: white;
        text-align: left;
        // position: absolute;
        // top: 1%;
        // left: 1%;
        font-size: 0.8em;
        padding-left: 2em;

        label {
            user-select: none;
            -moz-user-select: none;
            -webkit-user-select: none;
            position: relative;
            top: -4px;
        }

        #clusterItems {
            margin-top: 1em;

            .cluster {
                border: 1px solid black;
                display: inline-block;
                margin-right: 1.5em;

                label {
                    position: relative;
                    top: -2px;
                    padding: 3px 10px;
                    color: #fff;
                }
            }
        }
    }
}
